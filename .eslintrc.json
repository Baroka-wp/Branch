{
    "env": {
        "browser": true,
        "es2021": true,
        "amd": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/essential",
        "stylelint-csstree-validator"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
      "csstree/validator": {
      "properties": {
        "width": "| auto"
      }
    }
    }
}
